{
    "compilerOptions": {
        "lib":["esnext"],
        "module": "commonJs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "declaration":true,
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node",
        "types": ["mocha", "node"],
        "strict": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}